<div class="container">
	<div class="row"></div>
	<div class="row"></div>
	<div class="row"></div>
	<div class="row "><img class="responsive-img" src="../images/food.png" alt="burger"></div>
	<div class="row">
		<div class="col s6">
			<h2>Burgers</h2>
			<ul>
				{{#each burgers}} {{#unless this.devoured}}
				<li>
					{{this.burger_name}}

					<form action="/{{this.ID}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
						<button class="waves-effect waves-teal btn red darken-1" type="submit">Devour!</button>
					</form>
				</li>
				{{/unless}} {{/each}}
			</ul>


		</div>


		<div class="col s6">
			<h2>Devoured Burgers</h2>

			<ul>
				{{#each burgers}} {{#if this.devoured}}
				<li>
					{{this.burger_name}}
				</li>
				{{/if}} {{/each}}
			</ul>
		</div>
	</div>
</div>

<div class="row">
	<div class="col s3"></div>
	<div class="col s4">
		<h2>Add a Burger</h2>
		<form class="create-update-form" action="/" method="POST">

			<div class="form-group">
				<label for="ca">Burger: </label>
				<input type="text" id="ca" name="burger_name">
			</div>

			<button class="waves-effect waves-light btn yellow darken-3" type="submit">Add Burger</button>
		</form>
	</div>
	<div class="col s2"></div>
</div>
</div>